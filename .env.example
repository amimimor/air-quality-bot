# Twilio credentials for WhatsApp messaging
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Redis/Valkey database URL for user preferences storage
REDIS_URL=rediss://user:password@host:port

# Optional: Alert threshold (default: MODERATE)
# Values: GOOD, MODERATE, LOW, VERY_LOW
ALERT_THRESHOLD=MODERATE

# Optional: Language (default: he for Hebrew)
LANGUAGE=he
